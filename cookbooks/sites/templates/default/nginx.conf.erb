<% if @options[:type] == :forward -%>
upstream <%= @options.fetch(:port) %>_upstream {
  server 127.0.0.1:<%= @options.fetch(:port) %>;
  keepalive 64;
}
<% end -%>

server {

  server_name <%= @domain %>;
  access_log <%= @log %>/access.log;
  error_log <%= @log %>/error.log;

  location / {

    root <%= @public %>;

    location ~ ^/(images|javascripts|stylesheets|assets)/ {
      gzip_static on;
      expires max;
      add_header Cache-Control public;
      # no need for etag with cache-control and expires properly set
      add_header ETag "";
    }

    <% if @options[:type] == :forward -%>
      location / {
        proxy_redirect off;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $http_host;
        proxy_set_header X-NginX-Proxy true;
        proxy_set_header Connection "";
        proxy_http_version 1.1;
        proxy_pass http://<%= @options.fetch(:port) %>_upstream;
      }
    <% end -%>

  }

}

